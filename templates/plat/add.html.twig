{% extends 'base.html.twig' %}

{% block title %}Ajout Plat
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<h2>Ajouter un nouveau Plat:</h2>
			{% for message in app.flashes("notice") %}
				<div class="alert alert-success col-md-6 offset-md-3 mt-1" align="center">
					{{ message }}
				</div>
			{% endfor %}
			<div class="col-md-6 offset-md-3 mt-5">
				{{ form_start(form) }}
				<div class="form-group mb-3">
					{{ form_label(form.nomPlat) }}
					{{ form_widget(form.nomPlat, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group mb-3">
					{{ form_label(form.nbrCalories) }}
					{{ form_widget(form.nbrCalories, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group mb-3">
					{{ form_label(form.ingredients) }}
					{{ form_widget(form.ingredients, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group mb-3">
					{{ form_label(form.cout) }}
					{{ form_widget(form.cout, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group">
					<button class="btn btn-primary mt-2 text-white">Ajouter Plat</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}
