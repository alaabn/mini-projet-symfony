{% extends 'base.html.twig' %}

{%  if app.request.pathinfo == '/inscri' %}
    {% set button = 'Inscrire' %}
{% else %}
    {% set button = 'Login' %}
{% endif %}

{% block title %}
    Inscription
{% endblock %}

{% block body %}
	<div class="container">
		<div class="row">
			<h2>Cr√©e votre compte:</h2>

			<div class="col-md-6 offset-md-3 mt-5">
				{% for message in app.flashes("success") %}
					<div class="alert alert-success mb-3" align="center">
						{{ message }}
					</div>
				{% endfor %}

				{{ form_start(form) }}
				<div class="form-group mb-3">
					{{ form_label(form.name) }}
					{{ form_widget(form.name, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group mb-3">
					{{ form_label(form.email) }}
					{{ form_widget(form.email, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

				<div class="form-group mb-3">
                    {{ form_label(form.password.first) }}
					{{ form_widget(form.password.first, {'attr':{'class':'form-control mt-1'}}) }}
				</div>

                <div class="form-group mb-3">
                    {{ form_label(form.password.second) }}
                    {{ form_widget(form.password.second, {'attr':{'class':'form-control mt-1'}}) }}				
                </div>

				<div class="form-group">
					<button class="btn btn-primary mt-2 text-white">Inscrire</button>
				</div>
				{{ form_end(form) }}
			</div>
		</div>
	</div>
{% endblock %}

